@model IEnumerable<AppointmentViewModel>
@{
    ViewData["Title"] = "Appointments";
}

<div class="container mt-5">
    <h2 class="mb-4">Appointments</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No Appointments.
        </div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Doctor Name</th>
                    <th>Patient Name</th>
                    <th>Patient Birth Date</th>
                    <th>Appointment Date</th>
                    <th>From</th>
                    <th>To</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.DoctorName</td>
                        <td>@appointment.PatientName</td>
                        <td>@appointment.PatientBD.ToString("yyyy-MM-dd")</td>
                        <td>@appointment.Date.ToString("yyyy-MM-dd")</td>
                        <td>@appointment.From</td>
                        <td>@appointment.To</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="mt-4">
        <a href="@Url.Action("Index", "Appointments")" class="btn btn-primary">Add New Appointment</a>
    </div>
</div>
